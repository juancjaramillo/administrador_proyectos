{% extends 'base.html.twig' %}
{% block title %}Crear Tarea{% endblock %}

{% block body %}
<div class="container mt-5">
  <h1>Crear Tarea</h1>

  {{ form_start(form) }}

    <div class="mb-3">
      {{ form_label(form.title) }}
      {{ form_widget(form.title, {attr: {class: 'form-control'}}) }}
      {{ form_errors(form.title) }}
    </div>

    <div class="mb-3">
      {{ form_label(form.description) }}
      {{ form_widget(form.description, {attr: {class: 'form-control', rows: 4}}) }}
      {{ form_errors(form.description) }}
    </div>

    <div class="mb-3">
      {{ form_label(form.hours) }}
      {{ form_widget(form.hours, {attr: {class: 'form-control'}}) }}
      {{ form_errors(form.hours) }}
    </div>
  
    <div class="mb-3">
      {{ form_label(form.hourlyRate) }}
      {{ form_widget(form.hourlyRate, {attr: {class: 'form-control', step: '0.01'}}) }}
      {{ form_errors(form.hourlyRate) }}
    </div>

    <div class="mb-3">
      {{ form_label(form.user) }}
      {{ form_widget(form.user, {attr: {class: 'form-select'}}) }}
      {{ form_errors(form.user) }}
    </div>

    <div class="mb-3">
      {{ form_label(form.project) }}
      {{ form_widget(form.project, {attr: {class: 'form-select'}}) }}
      {{ form_errors(form.project) }}
    </div>

    <button class="btn btn-primary">Guardar</button>
    <a href="{{ path('task_index') }}" class="btn btn-secondary">Volver</a>

  {{ form_end(form) }}
</div>
{% endblock %}
