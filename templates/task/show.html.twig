{% extends 'base.html.twig' %}

{% block title %}
    {% if task is null %}
        Tarea no encontrada
    {% else %}
        Detalle de la Tarea
    {% endif %}
{% endblock %}

{% block body %}
   

<div class="container mt-4">
    {% if task is null %}
        <div class="alert alert-danger">La tarea no existe.</div>
    {% else %}
 <h1>Detalle de la Tarea</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Título</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Horas</th>
                <td>{{ task.hours }}</td>
            </tr>
            <tr>
                <th>Tarifa por hora</th>
                <td>
                    {{ task.hourlyRate is not null ? '$' ~ task.hourlyRate : 'N/D' }}
                </td>
            </tr>
            <tr>
                <th>Proyecto</th>
                <td>{{ task.project.name }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ task.user.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}" class="btn btn-secondary">Volver al listado</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-primary">Editar</a>

    
    {% endif %}
</div>
{% endblock %}
