{% extends 'base.html.twig' %}
{% block title %}Proyectos{% endblock %}

{% block body %}
<div class="container mt-5">
  <h1>Proyectos</h1>
  <a href="{{ path('project_new') }}" class="btn btn-success mb-3">Crear Proyecto</a>
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>ID</th><th>Nombre</th><th>Descripción</th><th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {% for project in projects %}
        <tr>
          <td>{{ project.id }}</td>
          <td>{{ project.name }}</td>
          <td>{{ project.description|default('—') }}</td>
          <td>
            <a href="{{ path('project_show',{id:project.id}) }}" class="btn btn-sm btn-info">Ver</a>
            <a href="{{ path('project_edit',{id:project.id}) }}" class="btn btn-sm btn-primary">Editar</a>
            <form method="post" action="{{ path('project_delete',{id:project.id}) }}" class="d-inline">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
              <button class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este proyecto?');">Eliminar</button>
            </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
