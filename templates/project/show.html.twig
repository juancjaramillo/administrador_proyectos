{% extends 'base.html.twig' %}

{% block title %}
    {% if project is null %}
        Proyecto no encontrado
    {% else %}
        Detalle del Proyecto
    {% endif %}
{% endblock %}

{% block body %}
<div class="container mt-4">
    {% if project is null %}
        <div class="alert alert-danger">El proyecto no existe.</div>
    {% else %}
	
	
	<h1>Proyecto:
		{{ project.name }}</h1>

	<table class="table table-bordered">
		<tbody>
			<tr>
				<th>ID</th>
				<td>{{ project.id }}</td>
			</tr>
			<tr>
				<th>Nombre</th>
				<td>{{ project.name }}</td>
			</tr>
			<tr>
				<th>Descripción</th>
				<td>{{ project.description|default('—') }}</td>
			</tr>
		</tbody>
	</table>

	
	
	 <a href="{{ path('project_index') }}" class="btn btn-secondary">Volver</a>
	
   {% endif %}
</div>
{% endblock %}
